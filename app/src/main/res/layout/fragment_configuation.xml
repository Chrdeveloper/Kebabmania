<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/azul"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/nombreConfig"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:text="Nombre"
        android:textSize="50dp"
        android:textColor="@color/amarillo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/cambiarnombreConfig"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nombreConfig"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:textColor="@color/amarillo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/lastOpinionsConfig"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cambiarnombreConfig"
        android:layout_marginTop="50dp"
        android:text="Ultimas opiniones"
        android:textSize="40dp"
        android:textColor="@color/amarillo"
        />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/recyclerOpinion"
        app:layout_constraintTop_toBottomOf="@id/lastOpinionsConfig"
        android:layout_marginTop="10dp"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerOpinions"/>


    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>